<?xml version="1.0" encoding="UTF-8"?>
<!-- 
* XML configuration of Balero CMS.
* NOTE: EDIT THIS FILE MANUALLY

  OPTIONS:
  - yes: true/activate
  - no: false/desactivate

 WRONG PARAMETERS 
 EXAMPLE:
 - Yes
 - No
 WRONG
 - yES
 - nO
 CORRECT
 - yes
 - no
* Otherwise Balero can't read the config file.

NOTE: Do not edit balero.config.xml on eclipse in a live website
	  if you are developing on github
-->
<config>
	<database>
		<dbhost>localhost</dbhost>
		<dbuser>root</dbuser>
		<!-- empty fields like "_blank" -->
		<!-- otherwise Balero CMS's core (XMLHandler) sent an error with empty fields -->
		<!-- wrong values <dbpass></dbpass> -->
		<!-- correct values <dbpass>_blank</dbpass> -->
		<dbpass>_blank</dbpass>
		<dbname>balero_cms</dbname>
	</database>
	<admin>
		<!-- admin god -->
		<username>_blank</username>
		<!-- pwd encrypt -->
		<passwd>_blank</passwd>
		<!-- admin data -->
		<firstname>Balero</firstname>
		<lastname>CMS</lastname>
		<!-- newsletter -->
		<newsletter>yes</newsletter>
		<email>@</email>
	</admin>
	<system>
		<!-- is first time -->
		<firsttime>yes</firsttime>
		<!-- balero cms installed -->
		<installed>no</installed>
	</system>
	<site>
		<!-- title page -->
		<title>Balero CMS</title>
		<!-- Direccion -->
		<url>http://www.balerocms.org/</url>
		<description>Powered by Balero CMS.</description>
		<keywords>_blank</keywords>
		<!-- basepath for url friendly -->
		<basepath>http://localhost:8002/</basepath>
		<!-- multilanguage support -->
		<multilang>no</multilang>
		<editor>summernote</editor>
	</site>
</config>
